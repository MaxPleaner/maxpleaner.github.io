<div id="progress-bar" class="progress-container" style="<%= 'display: none;' unless show_progress %>">
  <div style="margin-bottom: 10px;">
    Processing <%= current %> of <%= total %> items (<%= ((current.to_f / total) * 100).round %>%)
  </div>
  <div style="width: 100%; height: 20px; background-color: #eee; border-radius: 10px; overflow: hidden;">
    <div style="width: <%= (current.to_f / total * 100).round %>%; height: 100%; background-color: #1DB954; transition: width 0.3s ease-in-out;"></div>
  </div>
</div> 