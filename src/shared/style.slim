sass:
  .hidden
    display: none !important
    visibility: hidden !important

  .hidden
    display: none !important
    visibility: hidden !important

  @font-face
    font-family: Cutive
    src: url(/public/CutiveRegular-4LJl.ttf)

  @font-face
    font-family: Topaz
    src: url(/public/Topaz8-xxO8.ttf)

  html
    padding-bottom: 100px

  body
    font-family: Cutive, sans-serif
    color: white
    background-color: black
    margin: 50px

  nav
    font-size: 1.2em
    margin-bottom: 20px
    max-width: 900px

  .nav-item
    outline: 1px solid white
    padding: 5px 10px
    display: inline-block
    margin: 6px 4px

  .nav-item.root-link
    // outline: none
    font-size: 1.5em
    margin-bottom: 10px

  a, a:visited
    color: lightblue
    font-size: 0.9em

  a.unstyled, a.unstyled:visited
    // color: white
    text-decoration: none

  .nav-item.active
    outline: 2px solid lightgreen

  a:hover
    color: lightgreen
    font-size: 0.9em

  #software strong
    color: lightblue
    font-weight: normal

  .linkbox, .houdini-box
    width: 400px
    height: 490px
    outline: 1px solid white
    margin: 10px
    padding: 5px
    text-align: center
    display: inline-block
    float: left
    text-decoration: none

    img
      max-width: 350px
      max-height: 350px
      display: block
      margin-left: auto
      margin-right: auto

    .linkbox-text, .houdini-text
      display: flex
      flex-direction: column
      justify-content: center
      height: 130px

      .title
        display: block
        font-size: 1.5em

      .desc
        display: block

    .img-wrapper, .houdini-img-wrapper
      width: 350px
      height: 350px
      margin: 0 auto
      display: flex
      align-items: center
      justify-content: center

  .houdini-box
    width: 320px
    height: 420px

    .title
      font-size: 1.2em
      margin-bottom: 10px

  .houdini-text
    height: 100px !important
    font-size: 0.9em
    display: block !important

  .houdini-img-wrapper
    width: 300px !important
    height: 250px !important

    img
      max-width: 300px
      max-height: 250px
      display: block

  .band-box, .asset-box, .printing-box
    max-width: 600px
    height: 600px
    outline: 1px solid white
    margin: 20px
    padding: 10px
    display: inline-block
    float: left

  .asset-box
    height: 400px !important
    width: 450px !important
    font-size: 0.9em
    margin: 5px

  .gallery-box
    outline: 1px solid white
    display: inline-block
    margin: 5px
    padding: 0px
    width: 300px
    float: left
    height: 350px

    p
      padding: 3px
      font-size: 0.6em

    img, video
      max-height: 310px !important
      max-width: 300px !important

  .band-img, .asset-img
    max-height: 400px
    max-width: 600px
    display: block

  .asset-img
    max-height: 280px !important
    max-width: 440px !important

  .gallery-box img:hover
    cursor: pointer

  .printing-box
    width: 350px
    height: 450px
    margin: 10px
    // outline: none

  .printing-desc
    height: 100px

  .printing-img-container
    width: 350px
    height: 260px
    margin: 0 auto
    display: flex
    align-items: center
    justify-content: center
    
  .gallery-box img:hover
    cursor: pointer 

  .printing-box
    width: 350px
    height: 450px 
    margin: 10px
    // outline: none

  .printing-desc
    height: 100px   

  .printing-img-container
    width: 350px
    height: 260px
    margin: 0 auto
    display: flex
    align-items: center
    justify-content: center

  .printing-img
    max-width: 350px
    max-height: 260px
    display: block
  .printing-img
    max-width: 350px
    max-height: 260px
    display: block

  .clearfix
    clear: both